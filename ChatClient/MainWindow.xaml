<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="34" Margin="145,26,0,0" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="155"/>
        <Button x:Name="bConDicon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="110" Height="50"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="205" Margin="20,110,0,0" VerticalAlignment="Top" Width="735" Background="White"/>
        <TextBox x:Name="tbMessage" Height="60" Margin="20,335,97,0" TextWrapping="Wrap" Text="Press 'Enter' to send the message" VerticalAlignment="Top" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
